@using System.Web.Security;
@model MembershipUserCollection

@{
    ViewBag.Title = "Üyeler";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Üyeler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Kullanici/Ekle" class="btn btn-success rounded" role="button">Kullanıcı Ekle</a>
                </div>

                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Üye Adı</th>
                                    <th>Email</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>Son Giriş Tarihi</th>
                                    <th>Rolleri</th>
                                    <th>Rol Ata</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (MembershipUser user in Model)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>@user.CreationDate</td>
                                        <td>@user.LastLoginDate</td>
                                        <td><a class="btn btn-primary roles" data-username="@user.UserName">Rolleri</a></td>
                                        <td><a class="btn btn-primary addRole" data-username="@user.UserName">Rol Ata</a></td>
                                        <td><a href="#" class="btn btn-danger uyeSil" data-username="@user.UserName">Üye Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>
    <script>
        $(".addRole").on('click', function () {
            const username = $(this).data("username");
            console.log(username);
            window.location.href = "/Kullanici/RolAta?username=" + username;
        });
    </script>
}