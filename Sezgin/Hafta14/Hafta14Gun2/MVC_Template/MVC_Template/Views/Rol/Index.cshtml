@model List<string>

@{
    ViewBag.Title = "Roller";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Roller
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Rol/Ekle" class="btn btn-success rounded" role="button">Rol Ekle</a>
                </div>

                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Rol Adı</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (string role in Model)
                                {
                                    <tr>
                                        <td>@role</td>
                                        <td><a href="#" class="btn btn-danger ktgSil" data-role="@role">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>