@model HttpCookie

@{
    ViewBag.Title = "CookieOku";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Cookie Oku Sayfası
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    @if (Model != null)
                    {
                        <div class="h2">
                            Cookie Adı: <b>@Model.Name</b>
                        </div>
                        <div class="h2">
                            Cookie Değeri: <b>@Model.Value</b>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>