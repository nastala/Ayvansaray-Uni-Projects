@using MVC_Template.Models;
@model Supplier

@{
    ViewBag.Title = "Guncelle";
}

<br />
<br />
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tedarikci Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Tedarikci/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Tedarikci/Guncelle" method="post" role="form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Şirket adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Şirket adı giriniz" name="CompanyName" value="@Model.CompanyName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">İlgili Kişi:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="İlgili kişi giriniz" name="ContactName" value="@Model.ContactName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">İlgili Kişi Unvanı:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="İlgili kişi unvanı giriniz" name="ContactTitle" value="@Model.ContactTitle">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Adres:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Adres giriniz" name="Address" value="@Model.Address">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Şehir:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Şehir giriniz" name="City" value="@Model.City">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Bölge:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Bölge giriniz" name="Region" value="@Model.Region">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Posta Kodu:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Posta kodu giriniz" name="PostalCode" value="@Model.PostalCode">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Ülke:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Ülke giriniz" name="Country" value="@Model.Country">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Telefon Numarası:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Telefon numarası giriniz" name="Phone" value="@Model.Phone">
                        </div>
                        <br />
                        @Html.HiddenFor(model => model.SupplierID)
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

