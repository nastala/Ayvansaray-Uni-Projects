
@{
    /**/

    ViewBag.Title = "Tedarikciler";
}

@using MVC_Template.Models;
@model List<Supplier>

 @section head
{
    <style>
        .hata {
            color: red;
        }
     </style>     
}

<br />
<br />
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tedarikciler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Tedarikci/TedarikciEkle" class="btn btn-success rounded" role="button">Tedarikci Ekle</a>
                </div>

                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Şirket Adı</th>
                                    <th>İlgili Kişi</th>
                                    <th>İlgili Kişi Unvanı</th>
                                    <th>Adres</th>
                                    <th>Şehir</th>
                                    <th>Bölge</th>
                                    <th>Posta Kodu</th>
                                    <th>Ülke</th>
                                    <th>Telefon Numarası</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Supplier ted in Model)
                                {
                                    <tr>
                                        <td>@ted.CompanyName</td>
                                        <td>@ted.ContactName</td>
                                        <td>@ted.ContactTitle</td>
                                        <td>@ted.Address</td>
                                        <td>@ted.City</td>
                                        <td>@ted.Region</td>
                                        <td>@ted.PostalCode</td>
                                        <td>@ted.Country</td>
                                        <td>@ted.Phone</td>

                                        <td><a href="/Tedarikci/Guncelle/@ted.SupplierID" class="btn btn-primary">Güncelle</a></td>

                                        <td>
                                            <a href="#" class="btn btn-danger tedSil" data-tedid="@ted.SupplierID">Alert ile Sil</a>
                                            <button class="btn btn-danger modalAc" data-toggle="modal" data-target="#myModal" data-tedid="@ted.SupplierID" data-tedname="@ted.CompanyName">
                                                Modal ile Sil
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>

@section body
{
    <!-- Modal small-modal -->
    <div class="modal fade small-modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="small-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="small-modal-label">Small Modal Box</h4>
                </div>
                <div class="modal-body">
                    <p class="mesaj" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-danger tedModalSil">Sil</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}

@section scripts{
    <script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>
    <script>
        $(".modalAc").click(function () {
            const sirketAdi = $(this).data("tedname");
            const id = $(this).data("tedid");
            console.log(sirketAdi, id);
            $(".modal-body > p.mesaj").html(sirketAdi + " tedarikçisi silinsin mi?");
            $(".tedModalSil").data("tedid", id);
        });

        $(".tedSil").click(function () {
            var sonuc = confirm("Kayıt silinsin mi?");
            if (sonuc) {
                var tedID = $(this).data("tedid");
                $.ajax({
                    type: "POST",
                    url: "/Tedarikci/TedarikciSil/" + tedID,
                    success: function () {
                        alert("Kayıt silindi");
                        window.location.replace("/Tedarikci/Index");
                    },
                    error: function () {
                        alert("Kayıt silme sırasında hata oluştu.");
                    }
                })
            }
        });

        $(".tedModalSil").click(function () {
            const tedID = $(this).data("tedid");
            console.log(tedID);
            $.ajax({
                type: "POST",
                url: "/Tedarikci/TedarikciSil/" + tedID,
                success: function (durum) {
                    if (durum === "OK") {
                        alert("Kayıt silindi");
                        window.location.replace("/Tedarikci/Index");
                    }
                    else {
                        alert("Kayıt silme sırasında hata oluştu.");
                    }
                },
                error: function () {
                    alert("Kayıt silme sırasında hata oluştu.");
                }
            })
        });
    </script>
}

