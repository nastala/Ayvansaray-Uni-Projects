@using MVC_Template.Models;
@model Category

@{
    ViewBag.Title = "Create";
}

@section head
{
    <style>
        .centered {
            display: flex;
            justify-content: center;
        }
    </style>
}

<div id="right-column">
    <div class="centered">
        <h3>Kategori Oluştur</h3>
    </div>
    <div>
        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new
        {
            enctype =
        "multipart/form-data"
        }))
        {
            <div class="row centered">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryName, "Kategori Adı")
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, "Tanım")
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Picture, "Resim")
                        <div class="col-md-10">
                            <input name="Picture" type="file" />
                            @Html.ValidationMessageFor(model => model.Picture)
                        </div>
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default rounded" id="btnCreate">Oluştur</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>