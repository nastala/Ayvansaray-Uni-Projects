@using MVC_Template.Models;
@model Product

@{
    ViewBag.Title = "Details";
}

<head>
    <style>
        .centered {
            display: flex;
            justify-content: center;
        }
    </style>
</head>

<div id="right-column">
    <div class="centered">
        <h3>Ürün Düzenle</h3>
    </div>
    <div>
        @using (Html.BeginForm())
        {
            <div class="row centered">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductName, "Ürün Adı")
                        @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UnitPrice, "Birim Fiyatı")
                        @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UnitsInStock, "Stok")
                        @Html.EditorFor(model => model.UnitsInStock, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        <label for="UnitPrice">Kategori</label>
                        @Html.DropDownListFor(model => model.CategoryID, null, htmlAttributes: new { @class = "form-control rounded" })
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="UnitPrice">Tedarikçi</label>
                        @Html.DropDownListFor(model => model.SupplierID, null, htmlAttributes: new { @class = "form-control rounded" })
                        @Html.ValidationMessageFor(model => model.SupplierID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UnitsOnOrder, "Siparişteki Ürünler")
                        @Html.EditorFor(model => model.UnitsOnOrder, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ReorderLevel, "Yeniden Sipariş Edilme Adedi")
                        @Html.EditorFor(model => model.ReorderLevel, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.QuantityPerUnit, "Birim Adedi")
                        @Html.EditorFor(model => model.QuantityPerUnit, new { htmlAttributes = new { @class = "form-control rounded" } })
                    </div>
                    <div class="form-group">
                        <label for="UnitPrice">Sipariş Dışı</label>
                        @Html.CheckBoxFor(model => model.Discontinued)
                        @Html.ValidationMessageFor(model => model.Discontinued, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row centered">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-default rounded" id="btnEdit">Düzenle</button>
                </div>
                <div class="col-md-4">
                    <a href="/Product/Delete?productID=@Model.ProductID" style="float: right">Sil</a>
                </div>
            </div>
        }
    </div>
</div>
