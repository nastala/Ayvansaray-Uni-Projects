@using MVC_Template.Models;
@model Product

@{
    ViewBag.Title = "Details";
}

<head>
    <style>
        .centered {
            display:flex;
            justify-content:center;
            align-items:center;
        }
    </style>
</head>

<div id="right-column">
    <div>
        <div class="row centered">
            <div class="col-md-6">
                <form role="form">
                    <div class="form-group">
                        <label for="ProductName">Ürün Adı</label>
                        <input type="text" class="form-control rounded" id="ProductName" value="@Model.ProductName">
                    </div>
                    <div class="form-group">
                        <label for="UnitPrice">Birim Fiyatı</label>
                        <input type="text" class="form-control rounded" id="UnitPrice" value="@Model.UnitPrice">
                    </div>
                    <div class="form-group">
                        <label for="UnitsInStock">Stok</label>
                        <input type="text" class="form-control rounded" id="UnitsInStock" value="@Model.UnitsInStock">
                    </div>
                    <div class="form-group">
                        <label for="UnitPrice">Birim Fiyatı</label>
                        @Html.DropDownList("SupplierID", null, htmlAttributes: new { @class = "form-control rounded" })
                        @Html.ValidationMessageFor(model => model.SupplierID, "", new { @class = "text-danger" })
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
