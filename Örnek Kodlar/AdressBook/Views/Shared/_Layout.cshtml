
@{ 
    AdressBook.Models.User user = (AdressBook.Models.User)Session["User"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Adress Book</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Address Book", "Index", "Adress", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-right">
                @if(user != null)
                {
                    using (Html.BeginForm("Logout", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.ActionLink(user.Username, "Details", "User", null, htmlAttributes: new { @class = "control-label col-md-offset-9" })
                                @*<label class="col-md-offset-9" style="color:darkkhaki">@user.Username</label>*@
                            </div>
                            <div class="form-horizontal">
                                <input type="submit" value="Logout" class="btn btn-default col-md-offset-9"/>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.ActionLink("Sign In", "Login", "User") |
                            @Html.ActionLink("Sign Up", "Register", "User")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Address Book</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
